@model Tuple<CompanyPackage, List<Order>> 
@{
    ViewData["Title"] = "Paket Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h2 class="doc-section-title">Paket: @Model.Item1.Name</h2>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-xl">
                        Paket Açıklaması: @Model.Item1.Description
                    </div>
                    <div class="col-md-3 mb-xl">
                        +Ay Süresi: @Model.Item1.AddMonth ay Ek Süre Oluşturur
                    </div>
                    <div class="col-md-3 mb-xl">
                        Oluşturulma Tarihi: @Model.Item1.CreatedDate
                    </div>
                    <div class="col-md-3">
                        Bitiş Tarihi: @Model.Item1.ExpiresDate
                    </div>
                    <div class="col-md-3">
                        Fiyatı: @Model.Item1.Price
                    </div>
                    <div class="col-md-3">
                        Kampanyalı Fiyatı: @Model.Item1.NewPrice
                    </div>
                    <div class="col-md-3">
                        Durumu: @Model.Item1.Status
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 m-2">
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12"><h2>Siparişler</h2></div>
                    <div class="col-lg-12">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>FİRMA ADI</th>
                                    <th>SİPARİŞ TARİHİ</th>
                                    <th>SİPARİŞ TUTARI</th>
                                    <th>SİPARİŞ DURUMU</th>
                                    <th>İŞLEMLER</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Item2.Count > 0)
                                {
                                    @foreach (Order item in Model.Item2)
                                    {
                                        <tr>
                                            <td>@item.Company.CompanyName</td>
                                            <td>@item.OrderDate</td>
                                            <td>@item.TotalPrice</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a asp-action="EditOrder" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-primary"><i class="fa fa-edit"></i></a>
                                                <a asp-action="RemoveOrder" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-danger"><i class="fa fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }



                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">SİPARİŞ TALEBİ BULUNMAMAKTADIR.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

