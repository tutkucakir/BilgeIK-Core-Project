@model List<BankAccount>

@{
    ViewData["Title"] = "Banka Hesapları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 mb-2" style="border-bottom:1px solid #efefef">
                        <div class="d-flex justify-content-between">
                            <div class="card-title">Banka Hesaplarımız</div>
                            <div class="dropdown">
                                <button class="btn btn-primary btn-sm" id="dropdownMenuButton" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="material-icons m-0">more_horiz</i></button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-action="AddBankAccount"><i class="fa fa-edit text-primary"></i>&emsp;Ekle</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        IBAN
                                    </th>
                                    <th>
                                        BANKA
                                    </th>
                                    <th>
                                        DURUM
                                    </th>
                                    <th class="text-center">
                                        İŞLEM
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IBAN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Bank)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td class="text-center text-nowrap">
                                        <a asp-action="EditBankAccount" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-primary"><i class="fa fa-edit"></i></a>
                                        <a asp-action="RemoveBankAccount" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                }
                                @if (Model.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">
                                            KAYIT HESAP BİLGİSİ BULUNAMADI.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>