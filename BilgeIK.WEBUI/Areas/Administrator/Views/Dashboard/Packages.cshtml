@model IEnumerable<CompanyPackage>

@{
    ViewData["Title"] = "Paketler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h2 class="doc-section-title">Üyelik Paketleri</h2>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <a class="btn btn-raised btn-primary btn-sm mb-4" asp-action="AddPackage"><i class="fa fa-plus"></i> Yeni Paket Oluştur</a>
                    </div>
                    <div class="col-lg-12">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Paket Adı</th>
                                    <th>Süresi/Ay</th>
                                    <th>Eklenme Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Fiyatı</th>
                                    <th>Kampanyalı Fiyatı</th>
                                    <th>Durum</th>
                                    <th class="text-center">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model.Count()>0)
                        {
                                @foreach (var item in Model) {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.AddMonth)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ExpiresDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>@Html.DisplayFor(modelItem => item.NewPrice)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td class="text-center text-nowrap">
                                        <a asp-action="DetailPackage" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-info"><i class="fa fa-list"></i></a>
                                        <a asp-action="EditPackage" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-primary"><i class="fa fa-edit"></i></a>
                                        <a asp-action="RemovePackage" asp-route-id="@item.Id" class="btn btn-sm btn-raised btn-raised-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                        }
                        }else{
                                <tr>
                                    <td colspan="8" class="text-center">OLUŞTURULMUŞ BİR PAKET BULUNAMADI.</td>
                                </tr>
                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
