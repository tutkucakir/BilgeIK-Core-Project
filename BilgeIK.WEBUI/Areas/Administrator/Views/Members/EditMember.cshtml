@model BilgeIK.WEBUI.ViewModels.UserVM

@{
    ViewData["Title"] = "Üye Bilgilerini Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h2 class="doc-section-title">Üye Bilgisini Düzenliyorsunuz...</h2>
            <div class="card-body">
                <form asp-action="EditMember" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="JobTitle" class="control-label"></label>
                                <input asp-for="JobTitle" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="NationalIDCardNumber" class="control-label"></label>
                                <input asp-for="NationalIDCardNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="BirthDate" class="control-label"></label>
                                <input asp-for="BirthDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            @if (Model.Photo == null)
                            {
                                <img class="avatar-xl m-md" src="~/uploads/noavatar.gif" style="max-height:225px; max-width:175px;" id="preview" alt="">
                            }
                            else
                            {
                                <img class="avatar-xl m-md" src="~/uploads/@Model.Photo" style="max-height:225px; max-width:175px;" id="preview" alt="">
                            }
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Photo" class="control-label"></label>
                                <input type="file" asp-for="Photo" class="form-control" onchange="loadFile(event);" />
                                @section Scripts {
                                    <script>
                                        var loadFile = function (event) {
                                            var onizleme = document.getElementById('preview');
                                            onizleme.src = URL.createObjectURL(event.target.files[0]);
                                        };
                                    </script>
                                }
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Adress" class="control-label"></label>
                                <input asp-for="Adress" class="form-control" />
                                <span asp-validation-for="Adress" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="@Model.Gender" class="form-control js-example-basic-single" asp-items="Html.GetEnumSelectList<BilgeIK.CORE.Entity.Enums.Gender>()"></select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="@Model.Status" class="form-control js-example-basic-single" asp-items="Html.GetEnumSelectList<BilgeIK.CORE.Entity.Enums.Status>()"></select>
                            </div>
                        </div>


                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="LockoutEnd" class="control-label"></label>
                                <input asp-for="LockoutEnd" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-check">
                                E-Posta Doğrulaması
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="EmailConfirmed" /> @Html.DisplayNameFor(model => model.EmailConfirmed)
                                </label>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-check">
                                Hesap Kilitleme Özelliği
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="LockoutEnabled" /> @Html.DisplayNameFor(model => model.LockoutEnabled)
                                </label>
                            </div>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="form-group">
                                <input asp-for="Id" type="hidden" class="form-control" />
                                <input type="submit" value="Güncelle" class="btn btn-raised btn-primary" />
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

