@model BilgeIK.MODEL.Entities.CustomerComment

@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h2 class="doc-section-title">Kullanıcı Yorum Formu</h2>

            <div class="card-block">
                <form asp-action="CreateComment" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Gönder" class="btn btn-raised btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
