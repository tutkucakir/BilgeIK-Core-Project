@model BilgeIK.WEBUI.ViewModels.UserDocVM
@{
    ViewData["Title"] = "Özlük Dosyası Düzenleme Formu";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <h2 class="doc-section-title">Personel Dosya Bilgisini Düzenliyorsunuz...</h2>
            <div class="card-body">
                <form asp-action="EditEmployeeDocument" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Status" class="control-label"></label>
                                <select asp-for="@Model.Status" class="form-control js-example-basic-single" asp-items="Html.GetEnumSelectList<BilgeIK.CORE.Entity.Enums.Status>()"></select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <strong><i class="fa fa-info-circle"></i> Bilgi: </strong> Bu sayfadan dosya adı ve durumu değiştirilebilir. Dosyanın aslı veya dosya yolu değiştirilemez.
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="hidden" asp-for="Id" class="form-control" />
                                <input type="submit" value="Güncelle" class="btn btn-raised btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
