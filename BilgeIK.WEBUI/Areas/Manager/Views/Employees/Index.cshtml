@model PagedList.Core.IPagedList<UserListVM>
@{
    ViewData["Title"] = "Firma Paneli";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-6 col-sm-12 col-lg-6 mb-md">
            <div class="card">
                <div class="card-body">
                    <div class="ul-list-2 d-flex justify-content-between align-items-center">
                        <div class="ul-list-2-image">
                            @if (item.Photo != null)
                            {
                                <img class="avatar-md mr-2" src="~/uploads/@item.Photo">
                            }
                            else
                            {
                                <img class="avatar-md mr-2" src="~/uploads/noavatar.gif">
                            }
                        </div>
                        <div class="d-flex flex-wrap align-items-center flex-grow-1">
                            <div class="ul-list-2-label d-flex flex-column flex-grow-1">
                                <a class="font-weight-semi link-alt m-0" href="#">@item.FirstName @item.LastName</a>
                                @if (item.Status == BilgeIK.CORE.Entity.Enums.Status.Deleted)
                                {
                                    <span class="text-muted">@item.JobTitle (Silinmiş Hesap) </span>
                                }
                                else
                                {
                                    <span class="text-muted">@item.JobTitle </span>
                                }

                            </div>
                            <div class="ul-list-2-toolbar my-sm">
                                <a asp-action="DetailsEmployee" asp-route-id="@item.Id" class="btn btn-opacity btn-primary btn-sm">PROFİL</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
<div class="col-md-12">
    <pager class="pager-container" list="@Model" asp-controller="Employees" asp-action="Index" options="@SitePagedListRenderOptions.Boostrap4CustomizedText" />
</div>
</div>


